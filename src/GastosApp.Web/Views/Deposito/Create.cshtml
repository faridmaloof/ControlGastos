@model GastosApp.Domain.Entities.Deposito

@{
    ViewData["Title"] = "Registrar Nuevo Depósito";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" type="date" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FondoMonetarioId" class="control-label">Fondo Monetario</label>
                <select asp-for="FondoMonetarioId" class="form-select" asp-items="ViewBag.FondosMonetarios">
                    <option value="">-- Seleccione Fondo --</option>
                </select>
                <span asp-validation-for="FondoMonetarioId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar Depósito" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}